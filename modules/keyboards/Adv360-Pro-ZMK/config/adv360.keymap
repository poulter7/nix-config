        extra3 {
            display-name = "Cyan";
            bindings = <
&none  &none  &none   &none         &none        &none  &none                                                   &none  &none     &none        &none         &none      &none  &none
&none  &none  &kp N7  &kp N8        &kp N9       &none  &none                                                   &none  &none     &kp LS(TAB)  &kp TAB       &none      &none  &none
&none  &none  &kp N4  &hm LCTRL N5  &hm LGUI N6  &none  &none           &none   &none    &none  &none           &none  &kp LEFT  &kp DOWN     &kp UP_ARROW  &kp RIGHT  &none  &none
&none  &none  &kp N1  &kp N2        &kp N3       &none                          &none    &none                         &none     &none        &none         &none      &none  &none
&none  &none  &none   &none         &none                      &kp DOT  &kp N0  &none    &none  &trans  &trans                   &none        &none         &none      &none  &none
