(defvar
   tap-time 200
   hold-time 200
)

(defalias
    esc       (tap-hold $tap-time $hold-time esc lctl)
    nav       (layer-while-held nav)
    blank_nav (tap-hold $tap-time $hold-time XX @nav)
)

(defsrc 
  caps h j k l lalt
  f1    f2    f3    f4    f5    f6    f7    f8    f9    f10   f11   f12 lalt
)

(deflayer base
@esc h j k l @nav
🔅    🔆    XX   XX  XX  XX  ◀◀    ▶⏸    ▶▶    🔇    🔉    🔊 lalt
)

(deflayer nav
_ left down up right _
🔅    🔆    XX   XX  XX  XX  ◀◀    ▶⏸    ▶▶    🔇    🔉    🔊 lalt
)

